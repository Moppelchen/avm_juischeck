<Window x:Class="JuisCheck.FindUpdatesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:JuisCheck.Lang"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        SnapsToDevicePixels="True"
        Title="{x:Static lang:JCstring.DialogCaptionFindUpdates}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/BaseStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonBaseStyle}" x:Key="ButtonStyle">
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Margin"              Value="3"    />
            </Style>

            <Style TargetType="{x:Type Grid}" BasedOn="{StaticResource DialogGridBaseStyle}" x:Key="DialogGridStyle"/>

            <Style TargetType="{x:Type ProgressBar}" BasedOn="{StaticResource ProgessBarBaseStyle}" x:Key="ProgressBarStyle"/>

        </ResourceDictionary>
    </Window.Resources>

    <Grid Style="{StaticResource DialogGridStyle}">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6"   />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <ProgressBar Grid.Row="0" Width="400" Height="25" Style="{StaticResource ProgressBarStyle}" x:Name="pbProgress"/>
            <Button      Grid.Row="2" Content="{x:Static lang:JCstring.DialogButtonTextCancel}" IsCancel="True" Style="{StaticResource ButtonStyle}"/>
        </Grid>
    </Grid>
</Window>
